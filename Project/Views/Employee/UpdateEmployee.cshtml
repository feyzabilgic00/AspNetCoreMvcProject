@model Employee

@using (Html.BeginForm("UpdateEmployee", "Employee", FormMethod.Post))
{
    <div class="form-group">
        <label asp-for="EmployeeId" class="control-label"></label>
        <input asp-for="EmployeeId" class="form-control" />
        <span asp-validation-for="EmployeeId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EmployeeName" class="control-label"></label>
        <input asp-for="EmployeeName" class="form-control" />
        <span asp-validation-for="EmployeeName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EmployeeSurname" class="control-label"></label>
        <input asp-for="EmployeeSurname" class="form-control" />
        <span asp-validation-for="EmployeeSurname" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="City" class="control-label"></label>
        <input asp-for="City" class="form-control" />
        <span asp-validation-for="City" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Department" class="control-label"></label>
        @Html.DropDownListFor(m => m.DepartmentId, (SelectList)ViewBag.value, "Lütfen Seçiniz", new { @class = "dropdown form-control" })
    </div>
    <div class="form-group">
        <input type="submit" value="Update Employee" class="btn btn-success" />
    </div>
}