@model List<EmployeeDetailsDto>

<a class="btn btn-primary" asp-controller="Employee" asp-action="NewAddEmployee" role="button">New Add Employee</a>

<div class="mt-3">
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Employee Name</th>
                <th scope="col">City</th>
                <th scope="col">Department</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
            <tr>
                <th scope="row">@employee.EmployeeId</th>
                <td>@employee.EmployeeNameSurname</td>
                <td>@employee.City</td>
                <td>@employee.Department</td>
                <td>
                    <a class="btn btn-danger" asp-controller="Employee" asp-action="DeleteEmployee" asp-route-id="@employee.EmployeeId" role="button">Delete</a>
                    <a class="btn btn-success" asp-controller="Employee" asp-action="BringEmployee" asp-route-id="@employee.EmployeeId" role="button">Update</a>
                    <a class="btn btn-warning" href="#" role="button">Details</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
